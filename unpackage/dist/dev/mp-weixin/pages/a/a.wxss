page {
  background-color: #fff;
  font-size: 28rpx;
}
.h-flex-x {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
}
.card {
  background-color: var(--nav-bg);
  color: var(--nav-color);
  padding: 30rpx;
}
.list-item {
  height: 90rpx;
  border-top: var(--nav-color) solid 1px;
}
.nav-bar {
  box-sizing: content-box;
  height: 44px;
  background-color: var(--nav-bg);
  color: var(--nav-color);
  line-height: 44px;
  text-align: center;
  font-size: 16px;
}
.btn {
  background-color: var(--nav-bg) !important;
  color: var(--nav-color) !important;
}

